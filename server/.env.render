GMAIL_APP_PASSWORD=your_gmail_app_password_here

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.onrender.com,http://localhost:5173

# Frontend URL
