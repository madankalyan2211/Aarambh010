# Environment Variables Template for Aarambh LMS Frontend
# Copy this file to .env and fill in your actual values

# ===========================================
# Email Service Configuration (for OTP)
# ===========================================

VITE_EMAIL_SERVICE_PROVIDER=gmail

# Gmail Configuration (Using App Password)
VITE_GMAIL_USER=your_gmail_address_here
VITE_GMAIL_APP_PASSWORD=your_gmail_app_password_here
VITE_GMAIL_FROM_NAME=Aarambh LMS

# SMTP Configuration
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_SECURE=false

# ===========================================
# OTP Configuration
# ===========================================

VITE_OTP_EXPIRY_MINUTES=10
VITE_OTP_LENGTH=6
VITE_OTP_MAX_RESEND_ATTEMPTS=3
VITE_OTP_RESEND_COOLDOWN=60

# ===========================================
# Backend API Configuration
# ===========================================

VITE_API_BASE_URL=http://localhost:3002/api

# ===========================================
# Application Configuration
# ===========================================

VITE_APP_ENV=development
VITE_DEBUG_MODE=true
VITE_APP_URL=http://localhost:5173

# ===========================================
# Security Configuration
# ===========================================

VITE_JWT_SECRET=your_jwt_secret_here
VITE_SESSION_TIMEOUT=30

# ===========================================
# Third-Party Integrations
# ===========================================

VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret_here
VITE_GOOGLE_ANALYTICS_ID=your_google_analytics_id_here

# ===========================================
# Firebase Configuration
# ===========================================

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# ===========================================
# AI Integration
# ===========================================

# Groq API for AI content generation
GROQ_API_KEY=your_groq_api_key_here

# Ollama API for AI features
OLLAMA_API_URL=https://ollama.com
OLLAMA_MODEL=gpt-oss:120b-cloud
OLLAMA_API_KEY=your_ollama_api_key_here

# Hugging Face API for AI features
VITE_HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ===========================================
# Feature Flags
# ===========================================

VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_2FA=true